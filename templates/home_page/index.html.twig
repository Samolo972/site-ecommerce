{% extends 'base.html.twig' %}


{% block title %}
    Les produits
{% endblock %}

{% block body %}
    <!-- Section Produits -->
    <section class="products">
        <div class="container mt-3">
            <div class="row">
                {% for product in products %}
                    {% if product.isAvaible %}
                        <div class="col-md-4">
                            <div class="card mt-3">
                                <div class="overflow-hidden" style="height: 200px;">
                                    {% if product.imageName %}
                                        <img src="{{ vich_uploader_asset(product, 'imageFile') }}" class="img-fluid" alt="Image du produit">
                                    {% endif %}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text">{{ product.description | slice(0, 100) | striptags }}{% if product.description | length > 100 %}...{% endif %}</p>
                                    <p class="card-text">{{ (product.price / 100)|number_format(2, ',', '.')  }}â‚¬</p>
                                    <a href="{{ path('products.detail', {'id': product.id}) }}" class="btn btn-primary">Voir plus</a>
                                   <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-secondary"> <i class="fa-solid fa-cart-shopping"></i></a>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
